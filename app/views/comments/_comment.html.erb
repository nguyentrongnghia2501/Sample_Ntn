<li class="comment">
    <% if comment.id %>
        <%= comment.user.name %>:
        <%= comment.body %>
        </br>
        <%= time_ago_in_words(comment.created_at) %>
        <%= puts comment_url(comment) %>
        <%= link_to "Delete", comment_url(comment), method: :delete,class: "deletec",remote: true,  data: {confirm: "You sure?"} if current_user == comment.user%>
       </br>

    <% end %>
</li>
