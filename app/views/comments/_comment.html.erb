<li class="comment">
  <% if comment.id %>
     <%= comment.user.name %>:
     <%= comment.body %></br>
     <%= time_ago_in_words(comment.created_at) %>
     <%= puts "==========================================" %>
     <%= puts comment_url(comment) %>
     <%= puts "==========================================" %>
     <%= link_to "Delete", comment_url(comment), method: :delete,class: "deletec",remote: true,  data: {confirm: "You sure?"} if current_user == comment.user%>     </br></br>
   <% end %>
</li>
